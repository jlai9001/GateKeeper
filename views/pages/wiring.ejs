<link rel="stylesheet" href="css/wiring.css">

<div class="wiring-heading">
  Wiring
</div>

  <!-- =========================
      Zoom / Pan Image Viewer
      (place below all tables)
      ========================= -->
  <section class="electronics-zoom-wrap" aria-label="Electronics diagram viewer">
    <div class="electronics-zoom-header">
      <h2 class="electronics-zoom-title">Interactive Wiring Diagram</h2>

      <div class="electronics-zoom-controls" aria-label="Zoom controls">
        <button type="button" id="electronicsZoomOut" class="electronics-zoom-btn" aria-label="Zoom out">−</button>
        <button type="button" id="electronicsZoomIn" class="electronics-zoom-btn" aria-label="Zoom in">+</button>
        <button type="button" id="electronicsZoomReset" class="electronics-zoom-btn electronics-zoom-btn-reset" aria-label="Reset view">Reset</button>
      </div>
    </div>

    <div id="electronicsZoomViewport" class="electronics-zoom-viewport" role="region" aria-label="Zoomable image viewport">
      <img
        id="electronicsZoomImage"
        class="electronics-zoom-image"
        src="/images/electronics/Full-Electrical-Diagram.jpg"
        alt="Electronics diagram"
        draggable="false"
      />
    </div>

    <p class="electronics-zoom-hint">
      Scroll to zoom • Drag to pan • Pinch to zoom (touch)
    </p>
  </section>
  <script src="/js/electronics-zoompan.js">
  </script>
