<link rel="stylesheet" href="css/logic.css">


<section class="logic-page" aria-label="Gate Keeper Logic">
    <header class="logic-header">
        <h1 class="logic-title">Logic</h1>
        <p class="logic-tagline">Tap an item to view details.</p>
    </header>
    <div class="logic-list">

        <!-- if the gate is shut -->

        <details class="logic-card">
            <summary class="logic-summary">
                <div class="logic-summary-left">
                    <div class="logic-summary-text">
                        <span class="conditional-name">1. If the gate is shut</span>
                    </div>
                </div>
                    <span class="conditional-chevron" aria-hidden="true">▾</span>
            </summary>
            <div class="conditional-body">

                <details class="logic-card nested">
                    <summary class="logic-summary nested-summary">
                    <div class="logic-summary-left">
                        <div class="logic-summary-text">
                            <div class="conditional-name-sub1">AND </div>
                            <div class="conditional-name-sub1">a valid beacon is detected OR a scheduled timer is active</div>
                            <div class="conditional-name-sub1"></div>
                        </div>
                    </div>
                    <span class="conditional-chevron" aria-hidden="true">▾</span>
                    </summary>

                    <div class="conditional-body nested-body">
                    <div class="logic-result">open the gate</div>
                    </div>
                </details>
                </div>
        </details>

         <!-- if the gate is open-->

        <details class="logic-card">
            <summary class="logic-summary">
                <div class="logic-summary-left">
                    <div class="logic-summary-text">
                        <span class="conditional-name">2. If the gate is open</span>
                    </div>
                </div>
                    <span class="conditional-chevron" aria-hidden="true">▾</span>
            </summary>
            <div class="conditional-body">
                <details class="logic-card nested">
                    <summary class="logic-summary nested-summary">
                    <div class="logic-summary-left">
                        <div class="logic-summary-text">
                        <div class="conditional-name-sub1">AND no valid beacons are detected </div>
                        <div class="conditional-name-sub1">AND no scheduled timers are active </div>
                        <div class="conditional-name-sub1">AND no obstacles are detected </div>
                        </div>
                    </div>
                    <span class="conditional-chevron" aria-hidden="true">▾</span>
                    </summary>

                    <div class="conditional-body nested-body">
                    <div class="logic-result">shut the gate</div>
                    </div>
                </details>
                </div>
        </details>
    </div>
</section>
